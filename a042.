#include <iostream>
#include <iomanip>
/* run this program using the console pauser or add your own getch, system("pause") or input loop */

using namespace std;

int main(int argc, char** argv) {
	
	int n ;
	
    while(cin>>n)
    
	{
    cout << 2+n*(n-1) << endl; //因為每增加一個，就會跟前幾個相割，所以會增加前一項的兩倍個。列式=2+2*1+2*2+2*3+......+2*(n-1)=2+n*(n-1) 
    }

	return 0;
}
